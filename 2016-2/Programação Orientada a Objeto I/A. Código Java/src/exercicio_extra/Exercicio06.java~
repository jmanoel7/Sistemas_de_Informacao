// imprima os fatoriais de 1 até 15

public class Exercicio06 {

    public static void main (Strings args[]) {

	for (long int i=1; i<=15; i++) {
	    long int fat = fatorial(i);
	    System.out.println ("O fatorial de: " + i + " é: " + fat);
	}
	return;
    }

    public static long int fatorial (long int f) {
	if ( f == 0 || f == 1 )
	    return (long int) (1);
	else
	    return (f * fatorial (f-1));
    }

}
