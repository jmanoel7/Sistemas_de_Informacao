package lista_interfaces;

/**
 * Describe class DVDPlayer here.
 *
 *
 * Created: Tue Feb  7 02:10:30 2017
 *
 * @author <a href="mailto:joao.manoel@academico.ifg.edu.br"></a>
 * @version 1.0
 */
public class DVDPlayer implements Player {

    private String marca;
    private boolean tocando;
    private boolean fim;
    
    /**
     * Creates a new <code>DVDPlayer</code> instance.
     *
     */
    public DVDPlayer(String marca) {
        this.marca = marca;
    }

    /**
     * {@inheritDoc}
     */
    public String toString() {
        final int sbSize = 1000;
        final String variableSeparator = ", ";
        final StringBuffer sb = new StringBuffer(sbSize);

        sb.append("DVDPlayer = [ ");
        sb.append("marca=").append(marca);
        sb.append(" ]");
        
        return sb.toString();
    }
    
    /**
     * Check if this object is equal (equivalent) to another object.
     */
    public final boolean equals(final Object obj) {
        if (obj == this) return true;
        if ((obj == null) || !getClass().equals(obj.getClass())) return false;
        
        DVDPlayer o = (DVDPlayer) obj;
        
        return (marca == null ? o.marca == null : marca.equals(o.marca));
    }

    // Implementation of lista_interfaces.Player

    /**
     * Describe <code>play</code> method here.
     *
     */
    public final void play() {
    	if (this.fim)
    		this.tocando = false;
    	else
    		this.tocando = true;
    }

    /**
     * Describe <code>pause</code> method here.
     *
     */
    public final void pause() {
    	this.tocando = false;
    }

    /**
     * Describe <code>stop</code> method here.
     *
     */
    public final void stop() {

    }

    /**
     * Describe <code>reverse</code> method here.
     *
     */
    public final void reverse() {

    }

}
