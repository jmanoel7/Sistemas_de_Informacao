package lista_agregacao;

public class Moto {

	private Roda roda1;
	private Roda roda2;
	private String motor;
	
	public Moto(Roda roda1, Roda roda2, String motor) {
		//Roda1
		if (roda1 == null) {
			throw new NullPointerException("A referência da roda1 não pode ser nula!");
		}	
		this.roda1 = roda1;
		//Roda2
		if (roda2 == null) {
			throw new NullPointerException("A referência da roda2 não pode ser nula!");
		}
		this.roda2 = roda2;
		//Motor
		this.motor = motor;
	}

	public Roda getRoda1() {
		return roda1;
	}

	public void trocaRoda1(Roda roda1) {
		this.roda1 = roda1;
	}

	public Roda getRoda2() {
		return roda2;
	}

	public void trocaRoda2(Roda roda2) {
		this.roda2 = roda2;
	}

	public String getMotor() {
		return motor;
	}

	public boolean trocaMotor(String motor) {
		boolean sucesso = false;
		
		if (motor != null) {
			this.motor = motor;
			sucesso = true;
		}
		
		return sucesso;
	}

	
}
